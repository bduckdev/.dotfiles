#!/bin/bash

#if brave is not running, launch brave
if ! pgrep brave-browser > /dev/null ; then
    echo "Brave is not running. Launching Brave..."
   brave-browser 
   xclock &
   PID=$!
   xdotool search --sync --all --pid ${PID} --name '.*' set_window --classname "web-browser" set_window --class "web-browser"
fi
